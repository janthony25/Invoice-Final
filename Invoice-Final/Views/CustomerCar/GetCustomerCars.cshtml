@model List<Invoice_Final.Models.Dto.CustomerCarSummaryDto>

<div class="container d-flex justify-content-between align-items-center">
    <div class="left">
        <h2>Customer Cars</h2>
    </div>
    <div class="right">
        <a asp-controller="CustomerCar" asp-action="AddCarToCustomer" asp-route-id="@Model[0].CustomerId"><i class="bi bi-plus-circle-fill"></i> Car</a>
    </div>
</div>


<div class="customer-details container">
    <input asp-for="@Model[0].CustomerId" type="hidden" />
    <div class="form-group mb-2">
        <label asp-for="@Model[0].CustomerName"></label>
        <input asp-for="@Model[0].CustomerName" disabled />
    </div>
    <div class="form-group mb-2">
        <label asp-for="@Model[0].CustomerEmail"></label>
        <input asp-for="@Model[0].CustomerEmail" disabled />
    </div>
    <div class="form-group">
        <label asp-for="@Model[0].CustomerNumber"></label>
        <input asp-for="@Model[0].CustomerNumber" disabled />
    </div>
</div>

<table class="table table-striped mt-5">
    <thead>
        <tr>
            <th>Car Id</th>
            <th>Car Rego</th>
            <th>Car Make</th>
            <th>Car Model</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var car in Model)
        {
            <tr>
                <td>@car.CarId</td>
                <td>@car.CarRego</td>
                <td>@car.CarMake</td>
                <td>@car.CarModel</td>
                <td>
                    <div>
                        <a asp-controller="CustomerCarInvoice" asp-action="GetCustomerInvoiceSummary" asp-route-id="@car.CarId"><i class="bi bi-pencil-square"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>