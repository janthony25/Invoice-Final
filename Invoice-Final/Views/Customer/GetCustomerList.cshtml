@model List<Invoice_Final.Models.Dto.CustomerSummaryDto>


<div class="container d-flex justify-content-between align-items-center mt-5">
    <div class="left">
        <h2>Customer List</h2>
    </div>
    <div>
        <a class="btn btn-primary" asp-controller="Customer" asp-action="AddNewCustomer"><i class="bi bi-plus-circle-fill"></i> Customer</a>
    </div>
</div>


<table class="table table-striped mt-5">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Customer Name</th>
            <th>Customer Email</th>
            <th>Contact #</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var customer in Model)
        {
            <tr>
                <td>@customer.CustomerId</td>
                <td>@customer.CustomerName</td>
                <td>@customer.CustomerEmail</td>
                <td>@customer.CustomerNumber</td>
                <td>
                    <div>
                        <a asp-controller="CustomerCar" asp-action="GetCustomerCars" asp-route-id="@customer.CustomerId"><i class="bi bi-pencil-square"></i></a>
                        <a ><i class="bi bi-trash-fill"></i></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>