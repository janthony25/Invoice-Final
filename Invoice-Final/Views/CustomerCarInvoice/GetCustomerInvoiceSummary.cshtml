@model List<Invoice_Final.Models.Dto.CustomerCarInvoiceSummaryDto>

<h2>Car Invoice Summary</h2>

<div class="customer-car-details d-flex justify-content-between align-items-center">
    <div class="left">
        <div class="input-group">
            <label asp-for="@Model[0].CustomerName"></label>
            <input asp-for="@Model[0].CustomerName" />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CustomerEmail"></label>
            <input asp-for="@Model[0].CustomerEmail" />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CustomerNumber"></label>
            <input asp-for="@Model[0].CustomerNumber" />
        </div>
    </div>
    <div class="right">
        <input asp-for="@Model[0].CarId" />
        <div class="input-group">
            <label asp-for="@Model[0].CarRego"></label>
            <input asp-for="@Model[0].CarRego" />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CarMake"></label>
            <input asp-for="@Model[0].CarMake" />
        </div>
        <div class="input-group">
            <label asp-for="@Model[0].CarModel"></label>
            <input asp-for="@Model[0].CarModel" />
        </div>
    </div>
</div>

<div class="container d-flex justify-content-end align-items-center mt-5">
    <a class="btn btn-warning"><i class="bi bi-plus-square-fill"></i> Invoice</a>
</div>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Invoice Id</th>
            <th>Issue Name</th>
            <th>Date Added</th>
            <th>Due Date</th>
            <th>Total Amount</th>
            <th>Amount Paid</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.IssueName</td>
                <td>@invoice.DateAdded</td>
                <td>@invoice.DueDate</td>
                <td>@invoice.TotalAmount</td>
                <td>@invoice.AmountPaid</td>
                <td></td>
            </tr>
        }
    </tbody>
</table>